@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div id="fb-root"></div>
<script>
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>
	
<!--@CurrentPage.GetGridHtml("homeGridContent", "Bootstrap3")-->
	

<div id="divHomePage">
    <div class="container-fixed">
        <div class="row">
            <div class="col-md-6"> 
                <div id="divHomeCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#divHomeCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#divHomeCarousel" data-slide-to="1"></li>
                            <li data-target="#divHomeCarousel" data-slide-to="2"></li>
                            <li data-target="#divHomeCarousel" data-slide-to="3"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="/Media/HCCCHomePics/Youth/Summer_VBS.jpg" alt="Summer">
                            </div>

                            <div class="item">
                                <img src="/Media/HCCCHomePics/Youth/Youth_Graduation_Group_Picture.jpg" alt="Graduation">
                            </div>

                            <div class="item">
                                <img src="/Media/HCCCHomePics/Youth/youth1.jpg" alt="youth1">
                            </div>

                            <div class="item">
                                <img src="/Media/HCCCHomePics/Youth/youth2.jpg" alt="youth2">
                            </div>
							
							<div class="item">
                                <img src="/Media/HCCCHomePics/Youth/April_Baptism.jpg" alt="April_Baptism">
                            </div>
								
							<div class="item">
                                <img src="/Media/HCCCHomePics/Youth/CAMP.jpg" alt="CAMP">
                            </div>
								
							<div class="item">
                                <img src="/Media/HCCCHomePics/Youth/Shoe_Box.jpg" alt="Shoe_Box">
                            </div>
								
							<div class="item">
                                <img src="/Media/HCCCHomePics/Youth/Shoe_Box2.jpg" alt="Shoe_Box2">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#divHomeCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#divHomeCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                   </div>
            </div>
            <div class="col-md-6"> 
              <div id="divBlogOverview">
				 <div style="text-align: center">
						<img src="/Media/HCCCHomePics/Youth/HCCC_Youth_Vision.jpg" alt="Summer">
				 </div>
				
				<section class="light blogarchive">
					<div class="container-fluid">
			
							@{int i=0; 
							  int totalCount=CurrentPage.Children.Count();
							  }
			
							@foreach(var post in CurrentPage.Children.OrderBy("SortOrder desc")) 
							{
								if (i%3==0){
									@Html.Raw("<div class='row'>");
								}
						
									<div class="content equal">

											<h2>@post.Name</h2>	
											<p>@post.Author</p>
											<p>@Umbraco.Truncate(post.Introduction, 350, true)</p>

									</div>    
								if (i%3==2){
									 @Html.Raw("</div>");
								}    
								
								i++;    
							}
			
							@if (totalCount < 2) {
								@Html.Raw("</div>");              
							}
					</div>
				</section>
			</div>
           </div>             
        </div>
        </div>						
</div>